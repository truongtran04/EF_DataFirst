@model List<DataFirst.Models.Clothes_Color_Size>
@{
    ViewBag.Title = "Create Quantity";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h2>Create Quantity</h2>

<form action="/quantity/create" method="post">
    <div class="row m-3">
        <div class="col-md-10">
            <label for="ClothesID">Clothes Name</label>
            <select class="form-control" id="ClothesID" name="ClothesID" required>
                <option value="">Please select...</option>
                @foreach (var item in ViewBag.Clothes)
                {
                    <option value="@item.ClothesID">@item.ClothesName</option>
                }
            </select>
        </div>

        <div class="col-md-10">
            <label for="ColorID">Color Name</label>
            <select class="form-control" id="ColorID" name="ColorID" required>
                <option value="">Please select...</option>
                @foreach (var item in ViewBag.Colors)
                {
                    <option value="@item.ColorID">@item.ColorName</option>
                }
            </select>
        </div>

        <div class="col-md-10">
            <label>Sizes and Quantities</label>
            <div id="size-quantity-list">
                <div class="row mb-2">
                    <div class="col-md-5">
                        <select class="form-control" name="Sizes[0].SizeID" required>
                            <option value="">Please select size...</option>
                            @foreach (var size in ViewBag.Sizes)
                            {
                                <option value="@size.SizeID">@size.SizeName</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-5">
                        <input type="number" class="form-control" name="Sizes[0].Quantity" placeholder="Quantity" required />
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-danger remove-row">Remove</button>
                    </div>
                </div>
            </div>
            <button type="button" id="add-row" class="btn btn-primary">Add More Sizes</button>
        </div>
    </div>

    <button type="submit" class="btn btn-success ms-3">Tạo</button>
    <a class="btn btn-dark" href="/quantity/index">Hủy</a>
</form>

<script>
    let sizeIndex = 1;
    document.getElementById('add-row').addEventListener('click', function() {
        let newRow = `
            <div class="row mb-2">
                <div class="col-md-5">
                    <select class="form-control" name="Sizes[${sizeIndex}].SizeID" required>
                        <option value="">Please select size...</option>
                        @foreach (var size in ViewBag.Sizes)
                        {
                            <option value="@size.SizeID">@size.SizeName</option>
                        }
                    </select>
                </div>
                <div class="col-md-5">
                    <input type="number" class="form-control" name="Sizes[${sizeIndex}].Quantity" placeholder="Quantity" required />
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-danger remove-row">Remove</button>
                </div>
            </div>`;
        document.getElementById('size-quantity-list').insertAdjacentHTML('beforeend', newRow);
        sizeIndex++;
    });

    document.getElementById('size-quantity-list').addEventListener('click', function(e) {
        if (e.target && e.target.classList.contains('remove-row')) {
            e.target.closest('.row').remove();
        }
    });
</script>


