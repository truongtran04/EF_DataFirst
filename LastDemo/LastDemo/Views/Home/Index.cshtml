
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div>
    <!--Start Slide-->
    <div id="carouselSlide" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselSlide" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselSlide" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselSlide" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselSlide" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://placehold.co/3200x900?text=Slide1" class="d-block w-100" alt="Slide 1" />
            </div>
            <div class="carousel-item">
                <img src="https://placehold.co/3200x900?text=Slide2" class="d-block w-100" alt="Slide 2" />
            </div>
            <div class="carousel-item">
                <img src="https://placehold.co/3200x900?text=Slide3" class="d-block w-100" alt="Slide 3" />
            </div>
            <div class="carousel-item">
                <img src="https://placehold.co/3200x900?text=Slide4" class="d-block w-100" alt="Slide 4" />
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselSlide" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselSlide" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <!--End Slide-->
    <div class="container" style="margin-top:100px">
        <div class="container-fluid">
            <div class="container-title">
                <h3 class="title">Sản phẩm mới</h3>
            </div>
            <div class="d-flex justify-content-between">
                <div class="product-slide">
                    <a href="@Url.Action("Index","All")">
                        <img src="https://placehold.co/400x600" style="width:100%" />
                    </a>
                </div>
                <div class="product-slide">
                    <a href="@Url.Action("Index","All")">
                        <img src="https://placehold.co/400x600" style="width:100%" />
                    </a>
                </div>
                <div class="product-slide">
                    <a href="@Url.Action("Index","All")">
                        <img src="https://placehold.co/400x600" style="width:100%" />
                    </a>
                </div>
                <div class="product-slide">
                    <a href="@Url.Action("Index","All")">
                        <img src="https://placehold.co/400x600" style="width:100%" />
                    </a>
                </div>
            </div>
        </div>
        <div class="container" style="margin-top:100px; margin-bottom: 100px;">
            <div class="container-fluid p-0">
                <div class="border">
                    <div class="banner">
                        <a href="#"><img style="width:100%;" src="https://placehold.co/1200x400" /></a>
                    </div>
                </div>
                <div class="row">
                    @foreach (var item in ViewBag.Clothes)
                    {
                        <div class="col-3 mt-3 mb-3">
                            <div class="card border-0">
                                <div class="card-body p-0">
                                    <a class="#" href="#">
                                        <img class="img-fluid rounded" src="~/Content/images/clothes/@item.MainImage" alt="#">
                                    </a>
                                </div>
                                <div class="card-footer border-0 p-0">
                                    <div class="d-flex flex-row mt-3 mb-2">
                                        <div class="me-2">
                                            <div class="d-flex justify-content-center align-items-center border border-dark rounded-circle" style="width: 25px; height: 25px">
                                                <a class="#" href="#">
                                                    <div class="rounded-circle bg-danger" style="width: 20px; height: 20px"></div>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="me-2">
                                            <div class="d-flex justify-content-center align-items-center border border-dark rounded-circle" style="width: 25px; height: 25px">
                                                <a class="#" href="#">
                                                    <div class="rounded-circle bg-danger" style="width: 20px; height: 20px"></div>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="me-2">
                                            <div class="d-flex justify-content-center align-items-center border border-dark rounded-circle" style="width: 25px; height: 25px">
                                                <a class="#" href="#">
                                                    <div class="rounded-circle bg-danger" style="width: 20px; height: 20px"></div>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-2">
                                        <a class="#" href="#">
                                            <p class="card-text">@item.ClothesName</p>
                                        </a>
                                    </div>
                                    <div class="mb-2">
                                        <span><strong>@item.Price đ</strong></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

